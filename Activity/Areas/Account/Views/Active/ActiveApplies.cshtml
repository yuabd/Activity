@model Activity.Models.Paginated<Activity.Models.Apply>
@{
    ViewBag.Title = "报名情况";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="content">
	<div class="leftBox">
		<h3 style="font-size: 20px; margin-bottom: 20px;">活动报名情况</h3>
		<div style="width: 681px; background: #f2f2f2; overflow: hidden;padding: 10px;">
			<table class="grid">
				<tr>
					<th>编号</th>
					<th>姓名</th>
					<th>联系电话</th>
					<th>短号</th>
					<th>人数</th>
					<th>备注</th>
					<th>时间</th>
					<th>报名状态</th>
				</tr>
				@foreach (var item in Model)
				{
					<tr>
						<td>@item.ApplyID</td>
						<td>@item.Name</td>
						<td>@item.Contact</td>
						<td>@item.ShortCode</td>
						<td>@item.People</td>
						<td>@item.Content</td>
						<td>@item.DateCreated</td>
						<td>
							@if (item.Backup == "Y")
							{
								<span>替补报名</span>
							}
							else
							{
								<span>正常报名</span>
							}
						</td>
					</tr>
				}
			</table>
			@Model.Pager("pager")
		</div>
	</div>
	<div class="rightBox">
		@Html.Partial("_Count")
	</div>
</div>