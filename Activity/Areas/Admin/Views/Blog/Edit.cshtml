@model Activity.Models.Blog

@{
    ViewBag.Title = "Edit Blog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section head{
	<script src="/Scripts/jquery.validate.min.js" type="text/javascript"></script>
	<script src="/Scripts/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
	<script src="/Plugins/xheditor/xheditor-1.1.14-zh-cn.min.js" type="text/javascript"></script>

	<script type="text/javascript">
		$(function () {
			$("#BlogContent").xheditor({ upImgUrl: "/Upload/UploadPicture", upImgExt: "jpg,jpeg,gif,png", upFlashUrl: "/Upload/UploadVideo", upFlashExt: 'swf', upMediaUrl: "/Upload/UploadVideo", upMediaExt: "wmv,avi,wma,mp3,mp4,mid,swf", html5Upload: false });

			$("#main-menu").accordion("option", "active", 1);
		})
	</script>
}

<h2>编辑新闻</h2>

@using (Html.BeginForm("Edit", "Blog", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
	@Html.Partial("_Form")

	@Html.HiddenFor(m => m.ID)
	@Html.HiddenFor(m => m.AuthorID)
	
	<div class="section">
		<button type="submit">提交</button>
	</div>
}
